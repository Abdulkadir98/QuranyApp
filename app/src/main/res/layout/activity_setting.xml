<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_22sdp"
    tools:context=".feature.setting.SettingActivity">


    <CheckBox
        android:id="@+id/cbNightMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/setting_text_size"
        android:padding="@dimen/_16sdp"
        android:text="@string/night_mode"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_6sdp"
        android:background="@color/colorPrimary"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_16sdp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/color_for_background_for_regular_mode"
            android:textSize="@dimen/setting_text_size"
            android:textStyle="bold"
            android:padding="@dimen/_10sdp"/>

        <Spinner
            android:id="@+id/spColorReqularMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_6sdp"
        android:background="@color/colorPrimary"
        />



</LinearLayout>